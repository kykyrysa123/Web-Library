<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionXpathFilter Experimental Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2_xpath_experimental.dtd">
<suppressions>
    <!-- Подавление FinalClass для классов с @SpringBootApplication -->
    <suppress-xpath
            checks="FinalClass"
            query="/CLASS_DEF[./ANNOTATION/DOT/IDENT[@text='SpringBootApplication'] and ./ANNOTATION/DOT/IDENT[@text='autoconfigure']]"/>
</suppressions>
